<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="row mt-4">
        <mark class="h4 table-secondary"><%= @customer.name %></mark>
      </div>
      
    <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :会員ステータス %><br>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, '退会', value: :true %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, '有効', value: :false %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
