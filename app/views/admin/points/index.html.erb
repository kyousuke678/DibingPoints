<div class="offset-2">
  <div class="row mt-4">
    <mark class="h4 table-secondary">point一覧</mark>
  </div>

  <table class="table table-bordered col-10">
    <thead>
      <tr>
        <th class="table-secondary col-lg-1">Point.id</th>
        <th class="table-secondary col-lg-2">name</th>
        <th class="table-secondary col-lg-2">tag</th>
        <th class="table-secondary col-lg-2">star</th>
      </tr>
    </thead>
    <tbody>
      <% @points.each do |point| %>
        <tr>
          <td><%= point.id %></td>
          <td>
            <%= link_to admin_point_path(point.id) do %>
              <%= point.name %>
            <% end %>
          </td>
          <td>
            <% point.tags.each do |tag| %>
              <%= tag.category %>
            <% end %>
          </td>
          <td><%= render "customers/points/static_rate", point: point %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class= "container" >
    <div class= "row" >
      <div class= "col-8 offset-md-4 py-2 mt-5" >
        <%= paginate @points %>
      </div>
    </div>
  </div>

</div>