<% if customer_signed_in? %>
  <%= form_tag points_path, method: :get, class: 'boards__searchForm' do %>
    <%= select_tag :tag_id,
      options_from_collection_for_select(Tag.all, :id, :category, params[:tag_id]),
        {
          prompt: 'タグで絞り込み検索',
          onchange: 'submit(this.form);'
        }
    %>
  <% end %>
<% end %>