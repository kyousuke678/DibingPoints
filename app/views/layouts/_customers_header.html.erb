              <button type="button" class="btn btn-outline-dark btn-nm">
                <%#= link_to "Items", items_path, class: 'nav-link text-dark' %>
              </button>
            </li>
            <li class="nav-item ml-2">
              <button type="button" class="btn btn-outline-dark btn-nm">
                <%= link_to "SignUp", new_customer_registration_path, class: 'nav-link text-dark' %>
              </button>
            </li>
            <li class="nav-item ml-2">
              <button type="button" class="btn btn-outline-dark btn-nm">
                <%= link_to "Login", new_customer_session_path, class: 'nav-link text-dark' %>
              </button>
            </li>
          </ul>
          <% end %>
        </div>

    </div>
