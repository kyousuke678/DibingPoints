<%= form_with model:point,local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
          
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, class: 'form-control book_body' %>
  </div>
  
  <div class="check_box">
    <span><%= f.label :tag, 'タグ' %></span>
    <div>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :category, {include_hidden: false}) do |tag| %> 
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      <% end %>
    </div>
  </div>
  

  <% if point.id === nil %>
    <div class="form-group" id="star">
      <%= f.label :rate %>
      <%= f.hidden_field :rate, id: :review_star, class:'form-control' %>
    </div>
    
    <div id="post_raty"></div>
    <script>
      $( function() {
      let raty_elem = document.querySelector('#post_raty');
      raty_elem.innerHTML = ""
      let option = {  
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'point[rate]',
        };
      raty(raty_elem,option);
     });
    </script>
    
   
  <% else %>
    <%= render "static_rate", point: point %>
  <% end %>
          
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>