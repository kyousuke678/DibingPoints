<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% points.each do |point| %>
      <tr>
        <td>
          <%= link_to user_path(point.customer) do %>
            <% if point.customer.profile_image.attached? %>
             <%= image_tag point.customer.profile_image %>
            <% else %>
             <%= image_tag 'no_image.jpg' %>
            <% end %>
           <% end %>
        </td>
        <td>
          <%= link_to point_path(point) do %>
            <%= point.name %>
          <% end %>
        </td>
        <td><%= point.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>