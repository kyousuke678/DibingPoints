<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Point.name</th>
      <th>thoughts</th>
      <th colspan="3">tag</th>
    </tr>
  </thead>
  <tbody>
    <% points.each do |point| %>
      <tr>
        <td>
          <%= link_to user_path(point.customer) do %>
            <% if point.customer.profile_image.attached? %>
             <%= image_tag point.customer.profile_image, size: '80x80' %>
            <% else %>
             <%= image_tag 'no_image.jpg', size: '80x80' %>
            <% end %>
           <% end %>
        </td>
        <td>
          <%= link_to point_path(point) do %>
            <%= point.name %>
          <% end %>
        </td>
        <td><%= point.body %></td>
        <td>
          <% point.tags.each do |tag| %>
            <%= tag.category %>
          <% end %>
        </td>
        <td><%= render "customers/points/static_rate", point: point %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class= "row" >
  <div class= "col-8 offset-md-4 py-2 mt-5" >
    <%= paginate @points %>
  </div>
</div>