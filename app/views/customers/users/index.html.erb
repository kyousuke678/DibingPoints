<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image %>
                <% else %>
                  <%= image_tag 'no_image.jpg' %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>フォロー数:<%= user.followings.count %></td>
              <td>フォロワー数:<%= user.followers.count %></td>
              <td><%= render "customers/relationships/btn", user: user %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>