<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="px-3">ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="offset-3 mt-3">
      <strong class="px-3 pb-1">会員の方はこちらからログイン</strong>
    </div>
  </div>

  <div class="mt-4">
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name) , class: "w-100" do |f| %>
    
      <div class="row form-group">
        <div class="col-sm-3 offset-1" style="padding-left:15%">メールアドレス</div>
        <div class="col-sm-8"><%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", size: 60 %></div>
      </div>
      
      <div class="row form-group">
        <div class="col-sm-3 offset-1" style="padding-left:15%">パスワード</div>
        <div class="col-sm-8"><%= f.password_field :password, autocomplete: "new-password", size: 60 %></div>
      </div>
      
      <div class="row">
        <div class="col-sm-3 offset-1"></div>
        <div class="col-sm-8"><%= f.submit "ログイン", class: "btn btn-lg btn-info mx-auto" %></div>
      </div>
      
    
    <% end %>

  </div>
</div>

  <div class="row">
    <div class="offset-3 mt-5">
      <strong class=" px-3 pb-1">登録がお済みでない方</strong>
    </div>
  </div>

  <div class="row">
    <div class="offset-4 mx-10 mt-2">
      <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, method: :post, class: "btn btn-outline-success"%>
      <%= link_to "こちらから新規登録を行ってください。", new_registration_path(resource_name), class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>