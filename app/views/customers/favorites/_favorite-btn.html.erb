<% if point.favorited_by?(current_customer) %>
  <%= link_to point_favorites_path(point), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= point.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to point_favorites_path(point), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= point.favorites.count %> いいね
  <% end %>
<% end %>